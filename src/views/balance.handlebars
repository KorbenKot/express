{{> head }}
<div class="balance" data-template="balance">
    <div class="page-header" >
        <div class="wrapper page-header__wrapper">
            {{> breadcrumbs }}
            <a href="#" class="go-back"></a>
            <div class="fx fx-justify-between fx-align-center">
                <div class="fx fx-col fx-lg-row fx-align-start page-header__col-info">
                    <div class="fx fx-nowrap fx-col fx-lg-row fx-align-start fx-lg-align-center">
                        <h2 class="page-header__main-title">
                            Ваш баланс:&nbsp;
                            <span class="page-header__title-balance">200</span>
                            <span class="page-header__title-currency">&nbsp;Р</span>
                        </h2>
                        <h2 class="page-header__main-title page-header__main-title_help">
                            Бонус:&nbsp;
                            <span class="page-header__title-balance page-header__title-balance_accent">500</span>
                            <span class="page-header__title-currency">&nbsp;Р</span>
                            <span class="icon icon_help"></span>
                        </h2>
                    </div>
                </div>
                <a class="btn btn_std btn_bright page-header__btn">Пополнить баланс
                    <span class="btn__icon btn__icon_plus">&times;</span>
                </a>
            </div>
            <div class="navigation">
                <nav class="navigation__row">
                    <ul class="navigation__list">
                        <li><a href="/balance/pay" class="navigation__link">К оплате</a></li>
                        <li><a href="/balance/pay_history" class="navigation__link">История платежей</a></li>
                        <li><a href="/balance/pay_out" class="navigation__link">Вывод средств</a></li>
                        <li><a href="/balance/pay_help" class="navigation__link">Помощь по оплате</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="wrapper main-wrapper">
        <h2 class="title title_secondary">Введите сумму пополнения</h2>

                <input id="text" type="text" name="summToAdd">
                <label for="text">Сумма пополнения</label>
        
        <h2 class="title title_secondary">Выберете способ оплаты без комиссии:</h2>

        <div class="fx row__btn-container">
            <div class="col__btn-container col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon">
                    <span class="btn-icon__image btn-icon__image_visa"></span>
                    <span class="btn-icon__image btn-icon__image_mastercard"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_webmoney">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_wallet">
                    <span class="btn-icon__caption">Оплата c баланса</span>
                    <span class="btn-icon__image"></span>
                </button>
            </div>
        </div>

        <h2 class="title title_secondary">Оплата с комиссией (4,5%):</h2>

        <div class="fx row__btn-container">
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_qiwi">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_euroset">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_svyaznoi">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_yandex">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
            <div class="col__btn-container">
                <button class="btn btn_rect btn_bright btn-icon btn-icon_operators">
                    <span class="btn-icon__image"></span>
                </button>
            </div>
        </div>

        <div class="checkbox">
            <div class="checkbox-container">
                <input id="checkbox" type="checkbox" name="checkbox" class="checkbox__input">
                <span class="checkbox__checkmark"></span>
            </div>
            <label for="checkbox" class="checkbox__label">Я ознакомился с договором и политикой конфиденциальности.</label>
        </div>

        <button class="btn btn_std btn_primary balance__btn-main">Оплатить</button>
        
    </div>
</div>
{{> footer }}
